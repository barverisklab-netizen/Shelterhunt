    "ws": "^8.17.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/ws": "^8.5.10",
    "@types/pg": "^8.10.2",
    "eslint": "^8.57.0",
    "tsx": "^4.10.4",
    "typescript": "^5.4.5"
